{{!-- For each exhibit within the specific gallery, make a card --}}
<div class="container row">
    {{#each exhibits as |exhibit|}}
    <div class="card text-center" style="width: 18rem;">
        {{!-- Card Image --}}
        <img src="{{image_url}}" class="card-img-top" alt="...">
        {{!-- Card Body --}}
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p>By {{user.name}}</p>
            <p>{{size}} Â· {{medium}}</p>
            <p>${{price}}</p>
        </div>
        {{!-- Card Button --}}
        <a href="/user/{{user.id}}" class="btn btn-outline-secondary">Visit Artist's Page</a>
    </div>
    {{/each}}
</div>

