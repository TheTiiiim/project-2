{{!-- Edit Profile button if user is the artist --}}
{{#if privatePage }}
<div class="d-flex flex-row-reverse">
    <a href="/editUser/{{user.id}}"><button class="btn btn-primary">Edit Profile</button></a>
</div>
{{/if}}

{{!-- Artist's information --}}
<div class="row">
    <div class="col-9">
        <h1 class='row'>{{user.name}}</h1>
        <span class='row'>{{user.bio}}</span>
        <a href="{{user.website}}" target="_blank" rel="noreferrer noopener" class='row'>{{user.website}}</a>
        <a href="mailto:{{user.email}}" class='row'>{{user.email}}</a>
    </div>
    {{!-- <img class='col-3' src="{{user.image}}" alt="Artist's profile picture"> --}}
    <img class='col-3' src="https://via.placeholder.com/350x150" alt="Artist's profile picture">
</div>

{{!-- Upload new exhibit button if user is the artist --}}
{{#if privatePage }}
<div class="text-center">
    <a href="/submit"><button class="btn btn-primary">Create new Exhibit</button></a>
</div>
{{/if}}

{{!-- All Artist's exhibits --}}
<div class="container row">
    {{#if privatePage }}
    {{!-- If user is the artist, display card with edit button --}}
    {{#each user.exhibits as |exhibit|}}
    <div class="card text-center" style="width: 18rem;">
        {{> exhibitCard}}
        <div class="row">
            <a href="/editExhibit/{{exhibit.id}}" class="btn btn-primary">Edit</a>
            <button type="button" class="btn btn-danger deleteButton" data-id="{{exhibit.id}}" data-bs-toggle="modal" data-bs-target="#deleteConfirm">Delete</button>
        </div>
    </div>
    {{/each}}

    {{else}}
    {{!-- Else, no button --}}
    {{#each user.exhibits as |exhibit|}}
    <div class="card text-center" style="width: 18rem;">
        {{> exhibitCard}}
    </div>
    {{/each}}
    {{/if}}
</div>

{{!-- Delete Confirmation Modal --}}
<div class="modal fade" id="deleteConfirm" tabindex="-1" aria-labelledby="deleteConfirmLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button>
                <button type="button" id="confirmDelete" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete AJAX Script -->
<script src="/js/deleteModel.js"></script>