<h1>Edit Exhibit</h1>

<form id="editExhibit" class="row g-3">
  <div class="form-floating mb-3">
    <input type="text" required id="title" class="form-control" placeholder="placeholder" name="title" value="{{exhibit.title}}">
    <label class="floatingInput" for="title">Title</label>
  </div>

  <div class="form-floating mb-3">
    <input type="text" required id="medium" class="form-control" placeholder="placeholder" name="medium" value="{{exhibit.medium}}">
    <label class="floatingInput" for="medium">Medium</label>
  </div>

  <div class="form-floating mb-3">
    <input type="text" required id="size" class="form-control" placeholder="placeholder" name="size" value="{{exhibit.size}}">
    <label class="floatingInput" for="size">Size</label>
  </div>

  <div class="form-floating mb-3">
    <input type="number" required min="0" step=".01" id="price" class="form-control" placeholder="placeholder" name="price" value="{{exhibit.price}}">
    <label class="floatingInput" for="price">Price</label>
  </div>

  <div class="form-floating mb-3">
    <input type="text" readonly required id="imageUrl" class="form-control" name="imageUrl" value="{{exhibit.image_url}}">
    <label class="floatingInput" for="imageUrl">Image File</label><br>
  </div>

  <div class="col-12">
    <button id="uploadButton" type="button" class="btn btn-primary">Upload File</button>
  </div>


  <div class="col-12">
    <button type="submit" id="formSubmit" data-value="{{exhibit.id}}" class="btn btn-primary">Update</button>
  </div>
</form>